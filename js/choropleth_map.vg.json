{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Subscribers per 100 population (2023)",
    "width": 651,
    "height": 350,
    "projection": {
        "type": "equalEarth"
    },
    "data": {
        "url": "../js/ne_110m_admin_0_countries.json",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "layer": [
        {
            "transform": [
              {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
            ],
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
            "encoding": {
              "tooltip": {
                "field": "note"
              }
            }
        },
        {
            "data": {
              "url": "../js/ne_110m_graticules_30.json",
              "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "../data/Global_YouTube_Total_Subscribers.csv"
                        },
                        "key": "Country",
                        "fields": [
                            "total_subscribers",
                            "Population"
                        ]
                    }
                },
                {
                    "calculate": "datum.total_subscribers/datum.Population * 100", 
                    "as": "Subscribers per 100 population"
                }
            ],
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color": {
                    "field": "Subscribers per 100 population",
                    "title": [
                        "Subscribers per",
                        "100 population"
                      ],
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            10,
                            100,
                            900
                        ],
                        "range": [
                            "#fdbe85",
                            "#fd8d3c",
                            "#e6550d",
                            "#a63603"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "total_subscribers",
                        "type": "quantitative",
                        "title": "Subscribers"
                    },
                    {
                        "field": "Subscribers per 100 population",
                        "type": "quantitative", 
                        "format": ".2f"
                    }
                ]
            }
        }
    ],
    "config": {
        "view": {
            "stroke": null
        },
         "legend": {
            "titleFont": "PT Serif"
        },
         "title": {
            "font": "PT Serif",
            "fontSize": 16,
            "fontWeight": 600
        }
    }
}